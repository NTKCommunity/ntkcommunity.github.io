---
import { eventsData } from "../../data/events.js";

const highlightedForum = eventsData.find(e => e.category === "Forum");
---

<section class="py-24 bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <div class="flex-1 space-y-8">
        <div>
          <span class="inline-block px-4 py-1.5 bg-blue-50 text-blue-600 font-bold rounded-full text-xs uppercase tracking-widest mb-6">
            Weekly Highlight
          </span>
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 uppercase tracking-tighter leading-none mb-6">
            Friday Tek <span class="text-blue-600">Community Forums</span>
          </h2>
          <p class="text-xl text-gray-600 leading-relaxed max-w-xl font-light">
            Every Friday, we gather to talk tech, share innovations, and connect with like-minded individuals. It's the heartbeat of our community.
          </p>
        </div>

        <div class="bg-gray-50 rounded-[2.5rem] p-8 border border-gray-100 shadow-sm relative overflow-hidden group">
          <div class="absolute top-0 right-0 p-8 opacity-10 group-hover:opacity-20 transition-opacity">
            <svg class="w-24 h-24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
          </div>
          
          <div class="relative z-10">
            <h3 class="text-sm font-bold text-blue-600 uppercase tracking-widest mb-2">Next Session</h3>
            <h4 class="text-2xl font-bold text-gray-900 mb-4">{highlightedForum.title}</h4>
            <div class="flex flex-wrap gap-6 text-gray-500 font-medium text-sm">
              <span class="flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                Every Friday
              </span>
              <span class="flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                4:00 PM onwards
              </span>
            </div>
          </div>
        </div>

        <div class="pt-4">
          <a href="/events" class="inline-flex items-center px-8 py-4 bg-gray-900 text-white font-bold rounded-2xl hover:bg-black transition-all shadow-xl hover:shadow-gray-200 group">
            Explore All Events
            <svg class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="flex-1 relative">
        <div class="absolute -inset-4 bg-blue-600/10 rounded-[3rem] blur-2xl"></div>
        <div class="relative rounded-[2.5rem] overflow-hidden shadow-2xl aspect-[4/3]">
           <img 
            src={highlightedForum.image} 
            alt="Forum Highlights" 
            class="w-full h-full object-cover" 
          />
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/60 via-transparent to-transparent"></div>
          <div class="absolute bottom-6 left-6 right-6">
            <div class="p-6 backdrop-blur-md bg-white/10 rounded-2xl border border-white/20 text-white">
              <p class="text-sm font-medium italic">"The forum is where our ideas get wings. Don't miss the next one!"</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
