<section class="py-12">
  <div class="max-w-6xl mx-auto px-4 text-center" data-aos="fade-up">
    <h2 class="text-3xl font-bold text-blue-800 mb-2">Meet Our Team</h2>
    <p class="text-gray-600 mb-10">Get to know our team members</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      {teamMembers.map(({ name, role, image, delay }) => (
        <div
          class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition"
          data-aos="zoom-in"
          data-aos-delay={delay}
        >
          <div class="flex justify-center">
           
              <img
                src={image}
                alt={name}
                class="rounded-full border-4 border-blue-600 w-24 h-24 object-cover"
              />
          </div>
          <h3 class="text-blue-800 text-lg font-semibold mt-4">{name}</h3>
          <p class="text-gray-600 text-sm">{role}</p>
          <div class="flex justify-center gap-4 mt-3 text-blue-800 text-xl">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-linkedin-in"></i></a>
