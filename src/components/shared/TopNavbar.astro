---
<nav class="bg-white shadow-md sticky top-0 z-[100]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo Container -->
      <div class="flex-shrink-0 flex items-center gap-3">
        <a href="/" class="flex items-center group">
          <img src="/assets/images/logo.png" alt="NTK Logo" class="h-16 w-auto md:h-20 transition-transform group-hover:scale-105" />
        </a>
      </div>

      <!-- Desktop Nav -->
      <div class="hidden md:flex space-x-8 font-bold text-sm uppercase tracking-widest text-gray-700">
        <a href="/" class="hover:text-blue-600 transition-colors border-b-2 border-transparent hover:border-blue-600 py-1">Home</a>
        <a href="/about" class="hover:text-blue-600 transition-colors border-b-2 border-transparent hover:border-blue-600 py-1">About</a>
        <a href="/events" class="hover:text-blue-600 transition-colors border-b-2 border-transparent hover:border-blue-600 py-1">Events</a>
        <a href="/sub-communities" class="hover:text-blue-600 transition-colors border-b-2 border-transparent hover:border-blue-600 py-1">Communities</a>
        <a href="/team" class="hover:text-blue-600 transition-colors border-b-2 border-transparent hover:border-blue-600 py-1">Team</a>
      </div>

      <!-- Mobile Hamburger (Pushed to far right) -->
      <div class="md:hidden flex items-center">
        <button id="menu-toggle" class="text-gray-900 focus:outline-none p-2 rounded-xl bg-gray-50 border border-gray-100 shadow-sm active:scale-95 transition-transform">
          <svg id="menu-open" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-50 overflow-hidden transition-all">
    <div class="px-6 py-8 flex flex-col gap-6">
      <a href="/" class="text-2xl font-black text-gray-900 uppercase tracking-tighter hover:text-blue-600">Home</a>
      <a href="/about" class="text-2xl font-black text-gray-900 uppercase tracking-tighter hover:text-blue-600">About Us</a>
      <a href="/events" class="text-2xl font-black text-gray-900 uppercase tracking-tighter hover:text-blue-600">Events & Forums</a>
      <a href="/sub-communities" class="text-2xl font-black text-gray-900 uppercase tracking-tighter hover:text-blue-600">Sub-communities</a>
      <a href="/team" class="text-2xl font-black text-gray-900 uppercase tracking-tighter hover:text-blue-600">Our Team</a>
      
      <div class="mt-8 pt-8 border-t border-gray-100">
        <a href="https://discord.gg/c8Wddj7aXH" target="_blank" class="w-full inline-flex items-center justify-center px-6 py-4 bg-blue-600 text-white font-black rounded-2xl uppercase tracking-widest shadow-xl shadow-blue-600/20">
          Join Discord
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  function setupNav() {
    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("mobile-menu");
    const openIcon = document.getElementById("menu-open");
    const closeIcon = document.getElementById("menu-close");

    if (toggle && menu) {
      toggle.addEventListener("click", () => {
        const isHidden = menu.classList.toggle("hidden");
        openIcon.classList.toggle("hidden");
        closeIcon.classList.toggle("hidden");
        
        if (!isHidden) {
          menu.style.maxHeight = menu.scrollHeight + "px";
        } else {
          menu.style.maxHeight = null;
        }
      });
    }
  }

  // Handle both initial load and view transitions
  setupNav();
  document.addEventListener("astro:after-swap", setupNav);
</script>
