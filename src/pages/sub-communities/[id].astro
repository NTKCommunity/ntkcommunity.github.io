---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { subCommunities } from "../../data/sub-communities.js";

export async function getStaticPaths() {
  return subCommunities.map((community) => ({
    params: { id: community.id },
    props: { community },
  }));
}

const { community } = Astro.props;
---

<BaseLayout title={`${community.name} - NTK`}>
  <section class="py-24 bg-white min-h-screen">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Link -->
      <a href="/sub-communities" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium mb-12 transition-colors group">
        <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to All Sub-communities
      </a>

      <!-- Community Header -->
      <div class="mb-20">
        <div class="inline-block px-4 py-1.5 bg-blue-50 text-blue-600 font-bold rounded-full text-xs uppercase tracking-widest mb-6">
          Sub-community Focus
        </div>
        <h1 class="text-4xl md:text-6xl font-black text-gray-900 mb-8 uppercase tracking-tighter">
          {community.name}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 leading-relaxed font-light">
          {community.longDescription}
        </p>
      </div>

      <!-- Main Content Grid -->
      <div class="grid lg:grid-cols-3 gap-16">
        <div class="lg:col-span-2 space-y-16">
          <!-- Vision -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-indigo-100 text-indigo-600 flex items-center justify-center text-sm font-black">1</span>
              Community Vision
            </h2>
            <p class="text-lg text-gray-700 leading-relaxed bg-gray-50 p-8 rounded-[2rem] border border-gray-100 italic">
              "{community.vision}"
            </p>
          </div>

          <!-- Projects -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <span class="w-8 h-8 rounded-lg bg-pink-100 text-pink-600 flex items-center justify-center text-sm font-black">2</span>
              Core Projects
            </h2>
            <div class="grid sm:grid-cols-2 gap-4">
              {community.projects.map((project) => (
                <div class="flex items-center gap-4 p-5 bg-white border border-gray-100 rounded-2xl shadow-sm">
                  <div class="w-2 h-2 rounded-full bg-blue-600"></div>
                  <span class="font-bold text-gray-800">{project}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="lg:col-span-1">
          <!-- Captain Card -->
          <div class="sticky top-32">
            <div class="bg-gradient-to-br from-blue-600 to-indigo-700 rounded-[2.5rem] p-8 text-white shadow-2xl relative overflow-hidden">
               <div class="absolute -top-12 -right-12 w-32 h-32 bg-white/10 rounded-full blur-3xl"></div>
               <div class="absolute -bottom-12 -left-12 w-32 h-32 bg-indigo-900/20 rounded-full blur-3xl"></div>
              
              <div class="relative z-10">
                <h3 class="text-sm font-bold uppercase tracking-widest text-blue-100 mb-6">Sub-community Captain</h3>
                <div class="w-32 h-32 rounded-3xl overflow-hidden mb-6 shadow-xl border-4 border-white/20 mx-auto">
                   <img src={community.captain.image} alt={community.captain.name} class="w-full h-full object-cover" />
                </div>
                <h4 class="text-2xl font-black mb-2 text-center">{community.captain.name}</h4>
                
                <!-- Bio if available -->
                {community.captain.bio && (
                  <p class="text-sm text-blue-100/80 mb-4 text-center italic">
                    {community.captain.bio}
                  </p>
                )}
                
                <p class="text-blue-100/90 italic mb-6 text-center">"{community.captain.message}"</p>
                
                <!-- Social Links if available -->
                {(community.captain.github || community.captain.linkedin || community.captain.website) && (
                  <div class="flex justify-center gap-3 mb-6">
                    {community.captain.github && (
                      <a href={community.captain.github} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white/10 hover:bg-white/20 flex items-center justify-center transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      </a>
                    )}
                    {community.captain.linkedin && (
                      <a href={community.captain.linkedin} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white/10 hover:bg-white/20 flex items-center justify-center transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                      </a>
                    )}
                    {community.captain.website && (
                      <a href={community.captain.website} target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-xl bg-white/10 hover:bg-white/20 flex items-center justify-center transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                        </svg>
                      </a>
                    )}
                  </div>
                )}
                
                <a href="mailto:contact@ntk.org.np" class="inline-flex w-full items-center justify-center px-6 py-4 bg-white text-blue-700 font-bold rounded-2xl hover:bg-gray-50 transition-colors">
                  Join Discord Group
                </a>
              </div>
            </div>
            
            <p class="mt-6 text-sm text-center text-gray-400 font-medium">
              Want to lead a project? <a href="#" class="text-blue-600 underline">Apply as Lead</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
