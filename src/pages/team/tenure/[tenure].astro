---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { teamData } from "../../../data/team.js";

export async function getStaticPaths() {
  return teamData.map((tenureGroup) => ({
    params: { tenure: tenureGroup.tenure.replace('/', '-') },
    props: { tenureGroup },
  }));
}

const { tenureGroup } = Astro.props;
---

<BaseLayout title={`Tenure ${tenureGroup.tenure} - NTK Team`}>
  <section class="py-20 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <a href="/team" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium mb-12 transition-colors group">
        <svg class="w-5 h-5 mr-2 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to All Tenures
      </a>

      <div class="text-center mb-16">
        <h1 class="text-3xl md:text-5xl font-black text-gray-900 mb-4 uppercase tracking-tighter">
          Team Tenure <span class="text-blue-600">{tenureGroup.tenure}</span>
        </h1>
        <div class="h-1 w-20 bg-blue-600 mx-auto rounded-full mb-8"></div>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Honoring the dedicated student leaders of this past tenure who helped shape the foundations of our community.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {tenureGroup.executives.map((exec) => (
          <div class="bg-white rounded-3xl p-6 border border-gray-100 shadow-sm transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
            <div class="aspect-square rounded-2xl overflow-hidden mb-6 shadow-md">
              <img src={exec.image} alt={exec.name} class="w-full h-full object-cover grayscale opacity-85" />
            </div>
            <div class="text-center">
              <h3 class="text-lg font-bold text-gray-900 mb-1">{exec.name}</h3>
              <p class="text-blue-600 text-sm font-semibold mb-4 uppercase tracking-wider">{exec.role}</p>
              
              <div class="flex justify-center gap-3">
                {exec.socials?.linkedin && (
                  <a href={exec.socials.linkedin} target="_blank" class="text-gray-400 hover:text-blue-600 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  </a>
                )}
                {exec.socials?.github && (
                  <a href={exec.socials.github} target="_blank" class="text-gray-400 hover:text-gray-900 transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
