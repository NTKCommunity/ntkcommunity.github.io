---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { teamData } from "../../data/team.js";

export async function getStaticPaths() {
  const allExecutives = teamData.flatMap(t => t.executives);
  return allExecutives.map((exec) => ({
    params: { id: exec.id },
    props: { exec },
  }));
}

const { exec } = Astro.props;
---

<BaseLayout title={`${exec.name} - NTK Team`}>
  <section class="py-24 bg-white min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <a href="/team" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium mb-12 transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Team
      </a>

      <div class="grid md:grid-cols-3 gap-12 items-start">
        <div class="md:col-span-1">
          <div class="rounded-3xl overflow-hidden shadow-2xl aspect-square mb-6">
            <img src={exec.image} alt={exec.name} class="w-full h-full object-cover" />
          </div>
          <div class="flex gap-4 justify-center">
            {exec.socials?.linkedin && (
              <a href={exec.socials.linkedin} target="_blank" class="p-3 bg-gray-50 rounded-xl text-gray-400 hover:text-blue-600 transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
              </a>
            )}
            {exec.socials?.github && (
              <a href={exec.socials.github} target="_blank" class="p-3 bg-gray-50 rounded-xl text-gray-400 hover:text-gray-900 transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
              </a>
            )}
          </div>
        </div>
        
        <div class="md:col-span-2">
          <h1 class="text-4xl font-extrabold text-gray-900 mb-2 uppercase">{exec.name}</h1>
          <p class="text-2xl text-blue-600 font-bold mb-8">{exec.role}</p>
          
          <div class="prose prose-lg prose-blue">
            <h2 class="text-xl font-bold text-gray-900 mb-4 border-b pb-2">Biography</h2>
            <p class="text-gray-600 leading-relaxed italic">"{exec.bio}"</p>
          </div>
          
          <div class="mt-12 bg-blue-50 rounded-2xl p-8 border border-blue-100">
            <h2 class="text-lg font-bold text-blue-900 mb-4">Current Contribution</h2>
            <p class="text-blue-800 leading-relaxed">
              As the {exec.role} of Nepal Tek Community, {exec.name.split(' ')[0]} provides strategic leadership and technical mentorship to the student community, fostering a culture of continuous learning and innovation.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
