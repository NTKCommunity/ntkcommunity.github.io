---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import teamMembersData from '../../data/team-members.json';

export function getStaticPaths() {
  return teamMembersData.map(member => ({
    params: { id: member.id }
  }));
}

const { id } = Astro.params;
const member = teamMembersData.find(m => m.id === id);

if (!member) {
  return Astro.redirect('/');
}
---

<Layout title={`${member.name} - Nepal Tek Community`}>
  <Header />
  
  <main class="min-h-screen pt-20">
    <!-- Member Hero -->
    <section class="py-12 bg-gradient-to-br from-[#0479BC]/10 to-slate-50 dark:from-[#0479BC]/20 dark:to-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <a href="/#team" class="inline-flex items-center text-[#0479BC] hover:text-[#0479BC]/80 mb-6 transition-colors">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Team
          </a>
          
          <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
            <div class="w-32 h-32 rounded-full overflow-hidden ring-4 ring-[#0479BC]/30 flex-shrink-0">
              <img
                src={member.image || "/placeholders/placeholder.svg"}
                alt={member.name}
                class="w-full h-full object-cover"
              />
            </div>
            
            <div class="flex-1 text-center md:text-left">
              <h1 class="text-4xl md:text-5xl font-bold mb-3 text-slate-900 dark:text-slate-50">
                {member.name}
              </h1>
              <p class="text-xl text-[#0479BC] font-semibold mb-4">{member.role}</p>
              <p class="text-lg text-slate-600 dark:text-slate-400">{member.bio}</p>
              
              <div class="flex justify-center md:justify-start space-x-4 mt-6">
                {member.social.github !== "#" && (
                  <a
                    href={member.social.github}
                    class="text-slate-600 dark:text-slate-400 hover:text-[#0479BC] transition-colors"
                    title="GitHub"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                    </svg>
                  </a>
                )}
                <a
                  href={member.social.linkedin}
                  class="text-slate-600 dark:text-slate-400 hover:text-[#0479BC] transition-colors"
                  title="LinkedIn"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
                {member.social.website !== "#" && (
                  <a
                    href={member.social.website}
                    class="text-slate-600 dark:text-slate-400 hover:text-[#0479BC] transition-colors"
                    title="Website"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- About -->
    <section class="py-12 bg-slate-50 dark:bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-slate-50">About</h2>
          <div class="prose prose-lg dark:prose-invert max-w-none">
            <p class="text-slate-700 dark:text-slate-300 leading-relaxed whitespace-pre-line">
              {member.fullBio}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills -->
    <section class="py-12 bg-white dark:bg-slate-800">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-slate-50">Skills</h2>
          <div class="flex flex-wrap gap-3">
            {member.skills.map((skill) => (
              <span class="bg-[#0479BC]/10 text-[#0479BC] px-4 py-2 rounded-full text-sm font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Achievements -->
    <section class="py-12 bg-slate-50 dark:bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-slate-50">Key Achievements</h2>
          <ul class="space-y-3">
            {member.achievements.map((achievement) => (
              <li class="flex items-start gap-3 text-slate-700 dark:text-slate-300">
                <svg class="h-6 w-6 text-[#0479BC] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="leading-relaxed">{achievement}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <!-- Back to Team -->
    <section class="py-12 bg-white dark:bg-slate-800">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <a 
            href="/#team"
            class="inline-block bg-[#0479BC] text-white hover:bg-[#0479BC]/90 px-8 py-3 rounded-md font-medium transition-colors"
          >
            View All Team Members
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
