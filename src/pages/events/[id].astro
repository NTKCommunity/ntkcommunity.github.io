---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import eventsData from '../../data/events.json';

export function getStaticPaths() {
  return eventsData.map(event => ({
    params: { id: event.id }
  }));
}

const { id } = Astro.params;
const event = eventsData.find(e => e.id === id);

if (!event) {
  return Astro.redirect('/events');
}
---

<Layout title={`${event.title} - Nepal Tek Community`}>
  <Header />
  
  <main class="min-h-screen pt-20">
    <!-- Event Hero -->
    <section class="py-12 bg-gradient-to-br from-[#0479BC]/10 to-slate-50 dark:from-[#0479BC]/20 dark:to-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <a href="/" class="inline-flex items-center text-[#0479BC] hover:text-[#0479BC]/80 mb-6 transition-colors">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Home
          </a>
          
          <span class="inline-block bg-[#0479BC] text-white px-3 py-1 rounded-full text-sm mb-4">
            {event.status}
          </span>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-slate-900 dark:text-slate-50">
            {event.title}
          </h1>
          
          <div class="flex flex-wrap gap-6 text-slate-600 dark:text-slate-400">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>{event.date}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{event.location}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
              </svg>
              <span>{event.attendees} attendees</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Event Image -->
    <section class="py-8 bg-slate-50 dark:bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <img 
            src={event.image || "/placeholders/placeholder.svg"} 
            alt={event.title}
            class="w-full h-[400px] object-cover rounded-lg shadow-lg"
          />
        </div>
      </div>
    </section>

    <!-- Event Details -->
    <section class="py-12 bg-slate-50 dark:bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg dark:prose-invert max-w-none">
            {event.fullDescription.map((section) => (
              <div class="mb-8">
                <h3 class="text-2xl font-semibold mb-4 text-slate-900 dark:text-slate-50">{section.heading}</h3>
                {section.content.includes('\n') ? (
                  <ul class="list-disc list-inside mb-4 space-y-2 text-slate-700 dark:text-slate-300">
                    {section.content.split('\n').map((item) => item.trim() && <li>{item.trim()}</li>)}
                  </ul>
                ) : (
                  <p class="mb-4 text-slate-700 dark:text-slate-300 leading-relaxed">{section.content}</p>
                )}
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Related Events -->
    <section class="py-12 bg-white dark:bg-slate-800">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold mb-8 text-slate-900 dark:text-slate-50">
            More Events
          </h2>
          <div class="flex gap-4">
            <a 
              href="/events" 
              class="bg-[#0479BC] text-white hover:bg-[#0479BC]/90 px-6 py-3 rounded-md font-medium transition-colors"
            >
              View All Events
            </a>
            <a 
              href="/#events" 
              class="border-2 border-[#0479BC] text-[#0479BC] hover:bg-[#0479BC]/10 px-6 py-3 rounded-md font-medium transition-colors"
            >
              Recent Events
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
