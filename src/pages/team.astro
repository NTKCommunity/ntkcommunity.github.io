---
import BaseLayout from "../layouts/BaseLayout.astro";

const team = [
  {
    name: 'Member1',
    position: 'President',
    img: '/members/president.jpg',
    socials: {
      facebook: '#',
      instagram: '#',
      linkedin: '#',
    },
    delay: 0
  },
  {
    name: 'Member2',
    position: 'Vice President',
    img: '/members/vice-president.jpg',
    socials: {
      facebook: '#',
      instagram: '#',
      linkedin: '#',
    },
    delay: 100
  },
  {
    name: 'Member3',
    position: 'Secretary',
    img: '/members/secretary.jpg',
    socials: {
      facebook: '#',
      instagram: '#',
      linkedin: '#',
    },
    delay: 200
  },
  {
    name: 'Member4',
    position: 'Treasurer',
    img: '/members/treasurer.jpg',
    socials: {
      facebook: '#',
      instagram: '#',
      linkedin: '#',
    },
    delay: 300
  },

];
---

<BaseLayout>
  <section class="py-16 mt-10">
    <div class="max-w-7xl mx-auto px-4 md:px-10">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 animate-fade-in-up">
        Our <span class="text-blue-600 animate-tech-spin">Leadership</span> Team
      </h2>
      
      <!-- President Card (Centered at Top) -->
      <div class="flex justify-center mb-16">
        {team.filter(member => member.position === 'President').map((president) => (
          <div class="animate-fade-in-up">
            <div class="relative group">
              <div class="absolute inset-0 bg-blue-600 rounded-xl shadow-lg transform group-hover:-rotate-6 transition-all duration-300"></div>
              
              <div class="relative bg-white rounded-xl p-6 shadow-md transform group-hover:-translate-y-2 transition-all duration-300 flex flex-col items-center w-64">
                <div class="w-40 h-40 rounded-full overflow-hidden border-4 border-white shadow-lg mb-4 floating-avatar">
                  <img 
                    src={president.img} 
                    alt={president.name}
                    class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                  />
                </div>
                
                <h3 class="text-2xl font-bold text-gray-800 mb-1 group-hover:text-blue-600 transition-colors">
                  {president.name}
                </h3>
                <p class="text-blue-600 font-medium text-lg mb-4">{president.position}</p>
                
                <div class="flex space-x-4">
                  <a href={president.socials.facebook} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-facebook"></i>
                  </a>
                  <a href={president.socials.instagram} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-instagram"></i>
                  </a>
                  <a href={president.socials.linkedin} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-linkedin"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Other Team Members Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        {team.filter(member => member.position !== 'President').map((member) => (
          <div class={`animate-fade-in-up delay-${member.delay}`}>
            <div class="relative group h-full">
              <div class="absolute inset-0 bg-blue-600 rounded-xl shadow-lg transform group-hover:-rotate-6 transition-all duration-300"></div>
              
              <div class="relative bg-white rounded-xl p-4 shadow-md transform group-hover:-translate-y-2 transition-all duration-300 h-full flex flex-col items-center">
                <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg mb-4 floating-avatar">
                  <img 
                    src={member.img} 
                    alt={member.name}
                    class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                  />
                </div>
                
                <h3 class="text-xl font-bold text-gray-800 mb-1 group-hover:text-blue-600 transition-colors">
                  {member.name}
                </h3>
                <p class="text-blue-600 font-medium mb-3">{member.position}</p>
                
                <div class="flex space-x-3 mt-auto">
                  <a href={member.socials.facebook} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-facebook"></i>
                  </a>
                  <a href={member.socials.instagram} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-instagram"></i>
                  </a>
                  <a href={member.socials.linkedin} class="text-gray-500 hover:text-blue-600 transform hover:scale-125 transition-all">
                    <i class="fab fa-linkedin"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style is:global>
    /* Animation Keyframes */
    @keyframes fadeInUp {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-10px) rotate(2deg); }
    }
    
    @keyframes techSpin {
      0% { transform: rotate(0deg) scale(1); }
      50% { transform: rotate(180deg) scale(1.1); }
      100% { transform: rotate(360deg) scale(1); }
    }
    
    /* Animation Classes */
    .animate-fade-in-up {
      animation: fadeInUp 0.8s ease-out forwards;
    }
    
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    
    .floating-avatar {
      animation: float 4s ease-in-out infinite;
    }
    
    .animate-tech-spin {
      display: inline-block;
      animation: techSpin 4s linear infinite;
    }
    
    /* Interactive Effects */
    .group:hover .floating-avatar {
      animation: float 2s ease-in-out infinite, techSpin 6s linear infinite;
    }
  </style>
</BaseLayout>

