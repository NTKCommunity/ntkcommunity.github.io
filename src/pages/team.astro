---
import BaseLayout from "../layouts/BaseLayout.astro";
import { teamData } from "../data/team.js";

const currentTenure = teamData.find(t => t.tenure === "2025/26");
const advisors = currentTenure.executives.filter(e => e.role === "Advisor");
const coreTeam = currentTenure.executives.filter(e => e.role !== "Advisor");
const pastTenures = teamData.filter(t => t.tenure !== "2025/26");
---

<BaseLayout title="Our Team - Nepal Tek Community">
  <section class="py-20 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-20">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6 uppercase tracking-tighter">
          Meet Our <span class="text-blue-600">Executive Team</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto italic">
          "Empowering students through technology, one line of code at a time."
        </p>
      </div>

      <!-- Advisors Section (Highlighted First) -->
      {advisors.length > 0 && (
        <div class="mb-24">
          <div class="flex items-center gap-6 mb-12">
            <h2 class="text-2xl md:text-3xl font-black text-gray-900 uppercase tracking-tighter">Our Advisors</h2>
            <div class="h-px flex-1 bg-gradient-to-r from-gray-200 to-transparent"></div>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {advisors.map((exec) => (
              <a href={`/team/${exec.id}`} class="bg-white rounded-[2rem] p-8 border border-blue-100 shadow-xl shadow-blue-900/5 group hover:-translate-y-2 transition-transform duration-500">
                <div class="aspect-square rounded-2xl overflow-hidden mb-6 shadow-md border-4 border-blue-50">
                  <img src={exec.image} alt={exec.name} class="w-full h-full object-cover grayscale brightness-110 group-hover:grayscale-0 transition-all duration-700" />
                </div>
                <div class="text-center">
                  <h3 class="text-xl font-bold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors uppercase tracking-tight">{exec.name}</h3>
                  <p class="text-blue-600 text-sm font-bold uppercase tracking-widest">{exec.role}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Current Core Team Section -->
      <div class="mb-24">
        <div class="flex items-center gap-6 mb-12">
          <div class="h-1 lg:h-2 w-24 bg-blue-600 rounded-full"></div>
          <h2 class="text-3xl md:text-4xl font-black text-gray-900 uppercase tracking-tighter">
            Tenure {currentTenure.tenure}
          </h2>
          <div class="h-px flex-1 bg-gray-200"></div>
          <span class="px-4 py-1.5 bg-blue-600 text-white text-xs font-bold rounded-full uppercase tracking-widest">Active</span>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 lg:gap-8">
          {coreTeam.map((exec) => (
            <a href={`/team/${exec.id}`} class="group">
              <div class="relative mb-4">
                <div class="aspect-square rounded-2xl md:rounded-3xl overflow-hidden bg-white shadow-sm border border-gray-100 transition-all duration-500 group-hover:shadow-2xl group-hover:border-blue-200 group-hover:-translate-y-2">
                  <img 
                    src={exec.image} 
                    alt={exec.name} 
                    class="w-full h-full object-cover grayscale brightness-110 transition-all duration-700 group-hover:grayscale-0 group-hover:scale-110 group-hover:rotate-1"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-blue-900/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              </div>
              <div class="px-2">
                <h3 class="text-base font-bold text-gray-900 mb-0.5 group-hover:text-blue-600 transition-colors line-clamp-1 truncate">{exec.name}</h3>
                <p class="text-xs font-semibold text-blue-600 uppercase tracking-wider">{exec.role}</p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Past Tenures Section -->
      <div class="pt-12 border-t border-gray-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 flex items-center gap-3">
          <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Past Executive Tenures
        </h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {pastTenures.map((tenure) => (
            <a href={`/team/tenure/${tenure.tenure.replace('/', '-')}`} class="flex items-center justify-between p-6 bg-white rounded-2xl border border-gray-100 hover:border-blue-400 hover:shadow-xl transition-all group">
              <div>
                <h3 class="text-lg font-bold text-gray-900">Tenure {tenure.tenure}</h3>
                <p class="text-sm text-gray-500">{tenure.executives.length} Executives</p>
              </div>
              <div class="w-10 h-10 rounded-full bg-gray-50 flex items-center justify-center group-hover:bg-blue-600 group-hover:text-white transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
