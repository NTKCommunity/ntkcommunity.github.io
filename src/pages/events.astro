---
import BaseLayout from "../layouts/BaseLayout.astro";
import { eventsData } from "../data/events.js";

const upcomingEvents = eventsData; // For now assuming all are upcoming for demo
---

<BaseLayout title="Events & Forums - Nepal Tek Community">
  <section class="py-24 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 bg-blue-100 text-blue-700 font-bold rounded-full text-xs uppercase tracking-widest mb-6">Community Pulse</span>
        <h1 class="text-4xl md:text-6xl font-black text-gray-900 mb-6 uppercase tracking-tighter leading-none">
          Tek Community <span class="text-blue-600">Events & Forums</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto font-light">
          From our flagship Friday Forums to intensive technical workshops, we keep the community engaged and learning.
        </p>
      </div>

      <!-- Featured: Friday Forum Info -->
      <div class="mb-20 bg-gradient-to-br from-gray-900 to-blue-900 rounded-[3rem] p-12 text-white shadow-2xl relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl -mr-32 -mt-32"></div>
        <div class="relative z-10 grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </div>
              <h2 class="text-2xl font-black uppercase tracking-tight">Tek Community Forums</h2>
            </div>
            <p class="text-blue-100 text-lg leading-relaxed mb-8">
              The Friday Tek Community Forums are our signature weekly meetups. It's an open platform for students to discuss technology, share their projects, and hear from industry mentors. No registration required — just walk in with your passion.
            </p>
            <div class="grid grid-cols-2 gap-6 pb-2">
              <div class="p-4 rounded-2xl bg-white/5 border border-white/10">
                <span class="block text-blue-400 text-xs font-bold uppercase mb-1">When</span>
                <span class="text-lg font-bold">Every Friday</span>
              </div>
              <div class="p-4 rounded-2xl bg-white/5 border border-white/10">
                 <span class="block text-blue-400 text-xs font-bold uppercase mb-1">Where</span>
                 <span class="text-lg font-bold">NCIT Premises</span>
              </div>
            </div>
          </div>
          <div class="rounded-[2rem] overflow-hidden rotate-2 shadow-2xl">
             <img src="https://images.unsplash.com/photo-1515187029135-18ee286d815b?auto=format&fit=crop&q=80&w=1200" alt="Forum Image" class="w-full h-full object-cover scale-110" />
          </div>
        </div>
      </div>

      <!-- Events Listing -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {upcomingEvents.map((event) => (
          <div class="bg-white rounded-[2rem] border border-gray-100 overflow-hidden shadow-sm hover:shadow-xl transition-all group">
            <div class="aspect-video relative overflow-hidden">
               <img src={event.image} alt={event.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
               <div class="absolute top-4 left-4 px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-[10px] font-black uppercase tracking-widest text-blue-600 shadow-sm">
                  {event.category}
               </div>
            </div>
            <div class="p-8">
               <div class="flex items-center gap-2 text-gray-400 text-xs font-bold uppercase mb-3">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  {new Date(event.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
               </div>
               <h3 class="text-xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors">{event.title}</h3>
               <p class="text-gray-500 text-sm line-clamp-2 mb-6 leading-relaxed italic">
                 {event.description}
               </p>
               <div class="flex items-center justify-between pt-4 border-t border-gray-50">
                  <span class="text-[10px] font-black uppercase tracking-widest text-gray-400 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    {event.location}
                  </span>
                  <button class="text-blue-600 font-black text-xs uppercase tracking-widest">Details →</button>
               </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
